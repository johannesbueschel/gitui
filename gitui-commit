#!/bin/bash

options="[1] Commit - gitui-commit-commit
[2] Amend - gitui-commit-amend"

echo "$options" \
    | fzf +m \
    --style full \
    --reverse \
    --no-input \
    --border \
    --border-label " gitui - Commit " \
    --preview-window wrap \
    --preview="git diff --staged --color=always" \
    --bind "enter:execute({-1})+refresh-preview" \
    --bind "1:execute(gitui-commit-commit)+refresh-preview" \
    --bind "2:execute(gitui-commit-amend)+refresh-preview" \
    --bind "tab:become(gitui-working)"

