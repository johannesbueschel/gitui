#!/bin/bash

# Shows a selection to add a modified or new file to index
#get_files="git status --short"
get_files="git status --short | cut -c 4- | sed 's/\"//g'"
git status --short \
    | cut -c 4- \
    | sed 's/"//g' \
    | fzf \
    --style full -0 +m \
    --reverse \
    --preview="gitui-preview {}" \
    --bind "enter:execute(git add {})+reload($get_files),ctrl-p:execute(git add -p {})+reload($get_files)"
